<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8">
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>Productos</title>
        <link href="https://bootswatch.com/5/spacelab/bootstrap.min.css" rel="stylesheet">
    </head>
    <body class="p-4">
        <section class="p-4 bg-secondary">
            <h2 class="text-primary">Vista de Productos</h2>
            <% if (products.length===0) { %>
                <h2 class="bg-light p-4 text-danger">No se encontraron productos</h2>
                <% } else { %>
                    <table class="table table-dark">
                        <thead>
                            <tr>
                                <th>Nombre</th>
                                <th>Precio</th>
                                <th>Foto</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% products.forEach(product=> { %>
                                <tr class="text-center">
                                    <td class="align-middle">
                                        <%= product.title %>
                                    </td>
                                    <td class="align-middle">
                                        <%= product.price %>
                                    </td>
                                    <td class="align-middle">
                                        <img src="<%= product.thumbnail %>" alt="<%= product.title %>">
                                    </td>
                                </tr>
                                <% }) %>
                        </tbody>
                    </table>
                    <% } %>
                        <div class="mt-3">
                            <a href="./">
                                <button class="btn btn-warning">Agregar producto</button>
                            </a>
                        </div>
        </section>
    </body>
</html>